{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build active file",
      "type": "shell",
      "command": "/usr/bin/go",
      "args": [
        "build",
        "-o",
        "${workspaceFolder}/bin/${fileBasenameNoExtension}",
        "${file}"
      ],
      "problemMatcher": ["$go"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
